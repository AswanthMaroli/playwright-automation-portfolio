{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@tests/*": ["src/tests/*"],
      "@utils/*": ["src/utils/*"]
    },
    "outDir": "dist"
  },
  "include": ["playwright.config.ts", "src"]
}
